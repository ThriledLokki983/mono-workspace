{
  "name": "test-app",
  "description": "A React application for testing purposes in a monorepo setup",
  "author": "Gideon Nimoh",
  "license": "MIT",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "cd ../../.. && npx vite apps/fe/test-app --port=3000",
    "build": "cd ../../.. && npx tsc -b && npx vite build apps/fe/test-app",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "preview": "cd ../../.. && npx vite preview apps/fe/test-app"
  },
  "dependencies": {
    "@mono/components": "workspace:^",
    "@mono/fe-config": "workspace:^",
    "@mono/styles": "workspace:^"
  },
  "devDependencies": {
    "@mono/eslint-config-custom": "workspace:^"
  }
}
