{
  "name": "test-app",
  "description": "A React application for testing purposes in a monorepo setup",
  "author": "Gideon Nimoh",
  "license": "MIT",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "yarn exec vite --port=3000",
    "build": "yarn exec tsc -b && yarn exec vite build",
    "lint": "yarn exec eslint .",
    "lint:fix": "yarn exec eslint . --fix",
    "format": "yarn exec prettier --write .",
    "format:check": "yarn exec prettier --check .",
    "preview": "yarn exec vite preview"
  },
  "dependencies": {
    "@mono/components": "workspace:^",
    "@mono/fe-config": "workspace:^",
    "@mono/styles": "workspace:^"
  },
  "devDependencies": {
    "@mono/eslint-config-custom": "workspace:^"
  }
}
