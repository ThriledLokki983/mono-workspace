{
  "name": "mono-workspace",
  "version": "1.0.0",
  "description": "A comprehensive TypeScript monorepo for frontend and backend applications with shared component libraries and design system",
  "main": "index.js",
  "author": "Gideon Nimoh",
  "license": "MIT",
  "private": true,
  "repository": "git@github.com:ThriledLokki983/mono-workspace.git",
  "workspaces": [
    "packages/be/*",
    "packages/fe/*",
    "packages/shared/*",
    "packages/shared/config/*",
    "apps/fe/*",
    "apps/be/*",
    "apps/test/fe/*",
    "apps/test/be/*"
  ],
  "packageManager": "yarn@4.9.1",
  "scripts": {
    "build": "npx tsc -b",
    "build:clean": "npx tsc -b --clean",
    "build:watch": "npx tsc -b --watch",
    "start": "yarn workspace test-app start",
    "install:all": "yarn workspaces foreach --all --parallel run install",
    "lint": "yarn workspaces foreach --all --parallel run lint",
    "lint:fix": "yarn workspaces foreach --all --parallel run lint:fix",
    "format": "yarn workspaces foreach --all --parallel run format",
    "format:check": "yarn workspaces foreach --all --parallel run format:check",
    "test": "yarn workspaces foreach --all run test",
    "test:watch": "yarn workspaces foreach --all run test:watch",
    "typecheck": "npx tsc -b",
    "clean": "yarn workspaces foreach --all run clean && yarn build:clean",
    "reset": "yarn clean && rm -rf node_modules && yarn install",
    "ci": "yarn lint && yarn format:check && yarn build && yarn typecheck",
    "precommit": "yarn lint:fix && yarn format",
    "prepare": "yarn build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.59.0",
    "@tanstack/react-query-devtools": "^5.59.0",
    "lucide-react": "^0.511.0",
    "open-props": "^1.7.6",
    "react": "^19.1.0",
    "react-aria-components": "^1.9.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.1.1",
    "react-router-dom": "^7.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.24",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react-swc": "^3.10.0",
    "eslint": "^9.27.0",
    "prettier": "^3.5.3",
    "sass": "^1.89.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite": "^6.3.5"
  }
}
